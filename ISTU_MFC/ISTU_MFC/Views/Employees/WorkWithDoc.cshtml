@model List<ModelsData.RequestModel>

@{
    Layout = "_LayoutEmployees";
    ViewData["Title"] = "Home";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="d-flex">
    <form method="post" name="ChooseRequest">
        <input name="Type" value="ServiceConstructor" type="hidden"/>
        <input name="button" class="btn" type="submit" value="Конструктор услуг"/>
    </form>
    <div name="ServiceCollection" class="btn left-margin"><a asp-area="" asp-controller="Employees" asp-action="ServiceList">Список услуг</a></div>
</div>


<div name="SearchFilter">
    <form method="post" style="margin-bottom: 20px;">
        <input name="Type" value="Filter" type="hidden"/>
        <fieldset name="search" style="margin-top: 20px;">
            <input type="text" name="Number" placeholder="Поиск по номеру заявки"/>
            <input type="text" name="Family" placeholder="Поиск по фамилии студента"/>
        </fieldset>

        <fieldset name="filter" style="margin-top: 20px;">
            <label for="status">Фильтр заявок:</label>
            <select name="Status">
                <option value="">Выбрать статус заявки</option>
                <option value="not processed">Необработанные</option>
                <option value="processing">В работе</option>
                <option value="processed">Обработанные</option>
                <option value="closed">Закрытые</option>
            </select>
        </fieldset>

        <fieldset name="buttons" style="margin-top: 20px;">
            <button class="btn" type="submit">Применить</button>
        </fieldset>
    </form>
</div>

<div name="Services" class="services white-grey" >
    @foreach (var req in Model)
     {
         <form method="post" name="ChooseRequest" class="d-flex justify-content-center" >
             <input name="Type" value="ChooseRequest" type="hidden"/>
             <input name="Id" value="@req.Id" type="hidden"/>
             <input class="service black-grey d-flex" style="color: black; width:100%" type="submit" value="@req.Id @req.Caption @req.FamylyNS @req.CreationDate"/>
         </form>
    }
</div> 