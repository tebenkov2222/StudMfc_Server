<div name="Services" class="services white-grey">
    @foreach (var req in Model)
     {
         <form method="post" name="ChooseRequest" class="d-flex justify-content-center" >
             <input name="Type" value="ChooseRequest" type="hidden"/>
             <input name="Id" value="@req.Id" type="hidden"/>
             <input class="service black-grey d-flex" style="color: black; width:100%" type="submit" value="@req.Id @req.Caption @req.FamylyNS @req.CreationDate"/>
         </form>
    }
</div> 