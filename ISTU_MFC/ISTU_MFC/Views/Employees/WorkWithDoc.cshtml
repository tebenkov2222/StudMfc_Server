@model List<ModelsData.RequestModel>



@{
    Layout = "_LayoutEmployees";
    ViewData["Title"] = "Home";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post" name="ChooseRequest">
    <input name="Type" value="ServiceConstructor" type="hidden"/>
    <input name="button" class="btn left-margin" type="submit" value="Конструктор услуг"/>
</form>

<div name="SearchFilter">
    <form method="post" style="margin-bottom: 20px;">
        <input name="Type" value="Filter" type="hidden"/>
        <fieldset name="search" style="margin-top: 20px;">
            <input type="text" name="Family" placeholder="Поиск по номеру заявок"/>
        </fieldset>

        <fieldset name="filter" style="margin-top: 20px;">
            <label for="status">Фильтр заявок:</label>
            <select name="Status">
                <option value="">Выбрать статус заявки</option>
                <option value="not processed">Необработанные</option>
                <option value="processing">В работе</option>
                <option value="processed">Обработанные</option>
                <option value="closed">Закрытые</option>
            </select>
        </fieldset>

        <fieldset name="buttons" style="margin-top: 20px;">
            <button class="btn" type="submit">Применить</button>
        </fieldset>
    </form>
</div>
<div name="Archive" class="btn left-margin"><a>Архив</a></div>

<div name="ServiceCollection" class="btn left-margin"><a>Список услуг</a></div>

