@model RequestGeneratorModel

@{
    Layout = "_LayoutEmployees";
    ViewData["Title"] = "RequestGenerator";
}

<header style="height:50px">

</header>

<div name="id" class="d-flex" style="margin-left: 20px">
    <div name="labelID" class="d-inline grey1">ID</div>
    <div name="fieldID" class="d-inline grey2">@Model.Req_id</div>
</div>

<div name="about_student" class="grey2" style="margin: 0px 0px 20px 0px; padding: 30px 20px">
    <div name="fio" class="d-flex">
        <div name="labelfio" class="d-inline grey1">ФИО</div>
        <div name="fieldfio" class="d-inline grey2">@Model.Name</div>
    </div>
    <div name="fio" class="d-flex">
        <div name="labelfio" class="d-inline grey1">Группа</div>
        <div name="fieldfio" class="d-inline grey2">@Model.Group</div>
    </div>
    <div name="fio" class="d-flex">
        <div name="labelfio" class="d-inline grey1">Студенческий билет №</div>
        <div name="fieldfio" class="d-inline grey2">@Model.StudId</div>
    </div>
</div>

<div name="about" class="grey2" style="margin: 0px 0px 20px 0px; padding: 30px 20px">
    @foreach(var field in Model.Fields)
    {
        <div name="fio" class="d-flex">
             <div name="labelfio" class="d-inline grey1">@field.Name</div>
             <div name="fieldfio" class="d-inline grey2">@field.Value</div>
         </div>
    }
    
</div>

<div name="buttons" class="d-flex">
    <form method="post" name="GoToDownloadGeneration">
        <input name="Type" value="DownloadGeneration", type="hidden"/>
        <input name="Req_Id" value="@Model.Req_id", type="hidden"/>
        <input name="btn" class="btn" type="submit" value="Предпросмотр"/>
    </form>
    <form method="post" name="GoToDownloadGeneration">
        <input name="Type" value="ChangeStatus", type="hidden"/>
        <input name="Req_Id" value="@Model.Req_id", type="hidden"/>
        <input name="btn" class="btn" type="submit" value="Изменить статус заявки" style="margin-left: 40px"/>
    </form>
</div>
