@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<header class="d-flex justify-content-between align-items-center colored">
    <div class="d-flex justify-content-start align-items-center">
        <a asp-area="" asp-controller="Employees" asp-action="WorkWithDoc"><img src="~/images/logo_istu.svg" alt="лого" /></a>
        <a asp-area="" asp-controller="Employees" asp-action="WorkWithDoc" style="font-size:20pt;padding: 0 10px" class="heading_logos">Панель заявок</a>
        <a asp-area="" asp-controller="Employees" asp-action="ServiceConstructor" style="font-size:20pt;padding: 0 10px" class="heading_logos">Конструктор услуг</a>
        <a asp-area="" asp-controller="Employees" asp-action="ServiceList" style="font-size:20pt;padding: 0 10px" class="heading_logos">Список услуг</a>
    </div>
    <div class="d-flex justify-content-end">
        <div name="fio" class="d-flex align-items-center" style="font-size:16pt;color: white;">@Context.User.FindFirst(ClaimTypes.GivenName).Value</div>
        @* <a asp-area="" asp-controller="Employees" asp-action="Notifications" class="heading_logos logos"><i class="fa fa-bell" style="font-size:20pt;"></i></a> *@
        <a asp-area="" asp-controller="LogIn" asp-action="Logout" class="heading_logos logos"><i class="fa fa-sign-out" style="font-size:20pt;"></i></a>
    </div>
</header>
<div class="container" style="margin-top: 100px;">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/b6c595895a.js" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>