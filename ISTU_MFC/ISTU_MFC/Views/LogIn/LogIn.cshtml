@model ISTU_MFC.ViewModels.LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log-in";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="d-flex justify-content-between align-items-center colored">
        <a asp-area="" asp-controller="LogIn" asp-action="Home"><img src="~/images/logo_istu.svg" alt="лого" /></a>
        @* <a asp-area="" asp-controller="LogIn" asp-action="Home" style="font-size:20pt; color:black;">МФЦ ИжГТУ</a> *@
        <p style="font-size:20pt;color: white;margin: 0;height: 50px">МФЦ ИжГТУ</p>
        <div style="width:50px;"></div>
    </header>
    <div class="container" style="margin-top: 200px;">
        <main role="main" class="pb-3">
            <div name="form" class="login-form">
                <form name="auth" method="post" class="form-horizontal">
                    <fieldset name="caption" class="form-group">
                        <h4 class="d-flex justify-content-center">Вход</h4>
                    </fieldset>

                    <fieldset name="login" class="form-group">
                        <label for="email">Email/Login</label>
                        <input type="text" name="email" placeholder="" autofocus required />
                    </fieldset>

                    <fieldset name="password" class="form-group">
                        <label for="password">Пароль</label>
                        <input type="password" name="password" required />
                    </fieldset>

                    <fieldset name="error" class="form-group">
                        <p style="color:red; display:none;">Неверный логин или пароль</p>
                    </fieldset>

                    <fieldset name="buttonIN" class="form-group">
                        <input type="submit" name="in" value="Войти" class="btn"/>
                    </fieldset>
                </form>
            </div>
        </main>
    </div>
</body>
</html>