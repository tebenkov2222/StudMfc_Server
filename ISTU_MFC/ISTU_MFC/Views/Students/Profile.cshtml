@model ISTU_MFC.ModelsData.StudentProfileModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Profile";
    
}

<h2 class="d-flex justify-content-center">Профиль</h2>

<div name="about_student" class="grey2" style="padding: 30px 20px; margin: 0px 0px;">
