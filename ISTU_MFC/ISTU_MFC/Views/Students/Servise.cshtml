@model ModelsData.ServiseModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Servise";
}

<h4 name="NameOfServise" class="d-flex justify-content-center">@Model.Name</h4>

<div>
    <p>@Model.Info</p>
</div>

<div class="d-flex justify-content-between">
    <form method="post" name="ServRequest">
        <input name="Id" value="@Model.Id" type="hidden"/>
        <input name="Name" value="@Model.Name" type="hidden"/>
        <input name="RegService" value="Запросить услугу" class="btn" type="submit"/>
    </form>
    <div name="DownloadBlank" class="btn"><a>Скачать бланк заявления</a></div>
</div>
